<tr>
    <td class="grid-options" colspan="{{ totalColumns }}" style="line-height:41px;">
        {% if auth_user().hasPermission('delete.user') %}
            <button class="delete-user" type="button">{{ Lang.get('general.delete') }}</button> &nbsp;
        {% endif %}
        {% if not groups.isEmpty() and auth_user().hasPermission('update.user') %}
        <select name="btnChangeGroup" id="btnChangeGroup">
            <option value="">{{ Lang.get('user.add_group') }}...</option>
            {% for group in groups %}
                <option value="{{ group.id }}">{{ group.name }}</option>
            {% endfor %}
        </select>
        {% endif %}
    </td>
</tr>