{% if report.filtering|default is not empty and (report.filtering == 'ticket' or report.filtering == 'user') %}
<form class="conditiongroup">

    <h3 class="collapsable conditiongroup-header">
        {{ Lang.get('report.filtering') }}
        <div class="arrow">
            <i class="fa fa-chevron-up"></i>
        </div>
    </h3>

    <div class="filter-conditions" style="display: none">
        <div class="conditiongroup-inner">
            <table class="settings hide">
                {# Brand new group with one condition #}
                {% include 'operator.' ~ template ~ '.ticket.forms.condition' with { 'hide': true } %}
            </table>
        </div>

        <div class="conditiongroup-buttons">
            {{ form_button(Lang.get('general.add_item', {'item': Lang.get('ticket.condition')}),
                { 'class': 'add-condition' })
            }}
            {% if report.timeframe is not defined or report.timeframe == 'none' %}
                &nbsp;&nbsp;
                {{ form_button(Lang.get('general.update'), { 'class': 'updateReport' }) }}
            {% endif %}
        </div>
    </div>

</form>
{% endif %}