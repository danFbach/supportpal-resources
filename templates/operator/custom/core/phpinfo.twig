{% extends parent_template %}

{% block title %}
    {{ Lang.get('core.php_info') }}
{% endblock %}

{% block scripts_header %}
    <script>
        function resizeIframe(obj) {
            obj.style.height = (obj.contentWindow.document.body.scrollHeight + 40) + 'px';
        }
    </script>
{% endblock %}

{% block content %}

    <iframe src="{{ route('core.operator.phpinfo.show') }}" frameborder="0" scrolling="yes" onload="resizeIframe(this)" style="width: 100%;"></iframe>

{% endblock %}