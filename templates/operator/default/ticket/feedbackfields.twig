<!DOCTYPE html>
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{{ Lang.get('ticket.view_feedback') }}</title>
    
    <link href="{{ asset_rev('resources/assets/frontend/css/main.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset_rev('resources/assets/general/css/customfield.css') }}" rel="stylesheet" type="text/css" />

    <script src="{{ asset_rev('resources/assets/libs/jquery/js/jquery.min.js') }}" type="text/javascript"></script>
</head>

<body style="margin: 0 25px;">

    <div class="desk_wrapper" style="width: auto;">

        <div id="desk_content" style="width: auto;">

            <div class="desk_content_padding" style="padding: 25px 25px 0;">

                <h2>{{ Lang.get('ticket.ticket_feedback') }} - #{{ number }}</h2>

                {% if customfields is not empty %}
                    {% include 'operator.' ~ template ~ '.forms.customfields' %}
                {% else %}
                    <div class="fail box">
                        {{ Lang.get('ticket.feedback_fields_error') }}
                    </div>
                {% endif %}

            </div>

        </div>

    </div>

    <script type="text/javascript" src="{{ asset_rev('resources/assets/libs/common.min.js') }}"></script>
    <link href="{{ asset_rev('resources/assets/libs/css/common.min.css') }}" rel="stylesheet" type="text/css" property="stylesheet" />

    <script src="{{ asset_rev('resources/assets/operator/js/main.js') }}" type="text/javascript"></script>

    <!-- Custom fields -->
    <script src="{{ asset_rev('resources/assets/general/js/customfields.js') }}"></script>
    <script src="{{ asset_rev('resources/assets/libs/editor.min.js') }}"></script>
    <link rel="stylesheet" type="text/css" href="{{ asset_rev('resources/assets/frontend/css/redactor.css') }}">

    <script type="text/javascript">
        $(document).ready(function() {
            // Enable hide/show password toggle
            callHideShowPassword();
        });
    </script>

</body>

</html>